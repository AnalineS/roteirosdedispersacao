{
  "permissions": {
    "defaultMode": "acceptEdits"
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write|Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "node .claude/hooks/medical-quality-blocker.js",
            "timeout": 45000,
            "description": "Validação médica crítica e dados sensíveis (OBRIGATÓRIO)"
          },
          {
            "type": "command",
            "command": "node claude-quality-hooks/.claude/hooks/react-app/quality-check.js",
            "timeout": 60000,
            "description": "Auto-fix TypeScript, ESLint, Prettier para frontend"
          }
        ]
      },
      {
        "matcher": "Write|Edit|MultiEdit",
        "filePattern": "*.py|*.json|*.yaml|*.yml",
        "hooks": [
          {
            "type": "command",
            "command": "node .claude/hooks/medical-quality-blocker.js",
            "timeout": 45000,
            "description": "Validação médica para arquivos backend"
          },
          {
            "type": "command",
            "command": "node claude-quality-hooks/.claude/hooks/node-typescript/quality-check.js",
            "timeout": 60000,
            "description": "Validação de qualidade para backend/configs"
          }
        ]
      },
      {
        "matcher": "Write|Edit|MultiEdit",
        "filePattern": "*.config.*|*.rc.*|*.json|package.json|tsconfig.json",
        "hooks": [
          {
            "type": "command",
            "command": "node .claude/hooks/medical-quality-blocker.js",
            "timeout": 30000,
            "description": "Validação de configurações críticas"
          },
          {
            "type": "command",
            "command": "node claude-quality-hooks/.claude/hooks/vscode-extension/quality-check.js",
            "timeout": 45000,
            "description": "Validação de arquivos de configuração"
          }
        ]
      }
    ]
  }
}