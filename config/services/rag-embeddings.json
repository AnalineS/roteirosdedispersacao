{
  "name": "rag-embeddings",
  "version": "1.0.0", 
  "description": "Configuração do sistema RAG e Embeddings",
  "configuration": {
    "embeddings": {
      "model": "sentence-transformers/paraphrase-multilingual-MiniLM-L12-v2",
      "device": "cpu",
      "max_length": 512,
      "batch_size": 32,
      "cache_embeddings": true
    },
    "vector_store": {
      "path": "./cache/embeddings",
      "index_type": "flat",
      "similarity_threshold": 0.7,
      "max_results": 5
    },
    "knowledge_base": {
      "documents": [
        "data/knowledge_base/Roteiro de Dispensação - Hanseníase.md",
        "data/knowledge_base/roteiro_hanseniase_basico.md",
        "data/structured/clinical_taxonomy.json",
        "data/structured/dosing_protocols.json",
        "data/structured/pharmacovigilance_guidelines.json"
      ],
      "chunk_size": 500,
      "chunk_overlap": 50,
      "auto_reindex": false
    },
    "performance": {
      "lazy_loading": true,
      "cache_size": 1000,
      "preload_common_queries": true
    }
  }
}