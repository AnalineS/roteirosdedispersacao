# ============================================================================
# ENVIRONMENT CONFIGURATION - HOMOLOGAÇÃO
# Configuração funcional para deploy em homologação
# ============================================================================

# === CORE CONFIGURATION ===
FLASK_ENV=production
DEBUG=false
TESTING=false

# === SECURITY CONFIGURATION ===
SECRET_KEY=hml_roteiros_dispensacao_secret_2024_secure_key_hanseniase_education
JWT_SECRET_KEY=hml_jwt_hanseniase_dispensacao_secure_token_2024
PASSWORD_SALT=hml_salt_hanseniase_2024_secure

# === API CONFIGURATION ===
OPENROUTER_API_KEY=sk-or-v1-dummy-key-for-homologacao-testing
OPENAI_API_KEY=sk-dummy-openai-key-for-homologacao-testing

# === CORS CONFIGURATION ===
# CORS URLs configured for Cloud Run deployment
# Will be dynamically updated during GitHub Actions deploy with actual Cloud Run URLs
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
CORS_ALLOW_CREDENTIALS=true

# === EMAIL CONFIGURATION ===
EMAIL_PROVIDER=smtp
EMAIL_FROM=noreply@roteirodispensacao.com.br
EMAIL_FROM_NAME=Roteiro de Dispensação PQT-U - HML
EMAIL_REPLY_TO=suporte@roteirodispensacao.com.br

# SMTP Configuration (usando Gmail como exemplo)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=hanseniase.hml@gmail.com
SMTP_PASSWORD=app_password_placeholder
SMTP_USE_TLS=true
SMTP_USE_SSL=false

# Rate Limiting
EMAIL_RATE_LIMIT=50
EMAIL_RATE_LIMIT_HOUR=500

# === DATABASE CONFIGURATION ===
# Usando SQLite para homologação (simplificado)
DATABASE_URL=sqlite:///data/database/roteiros_dispensacao_hml.db
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=hml_password
DB_NAME=roteiros_hanseniase_hml

# Connection Pool
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30

# === SUPABASE CONFIGURATION ===
SUPABASE_URL=https://dummy-project-hml.supabase.co
SUPABASE_ANON_KEY=dummy_supabase_anon_key_hml
SUPABASE_SERVICE_KEY=dummy_supabase_service_key_hml
SUPABASE_JWT_SECRET=dummy_supabase_jwt_secret_hml

# Vector Store Configuration
SUPABASE_VECTOR_DIMENSION=384
SUPABASE_VECTOR_SIMILARITY_THRESHOLD=0.5

# === CACHE CONFIGURATION ===
CACHE_TYPE=filesystem
CACHE_DEFAULT_TIMEOUT=300
FIRESTORE_CACHE_COLLECTION=cache_hml

# === SOCIAL FEATURES CONFIGURATION ===
ENABLE_SOCIAL_SHARING=true
ENABLE_EMAIL_NOTIFICATIONS=false
ENABLE_AVATAR_UPLOAD=false
AVATAR_MAX_SIZE=2097152
AVATAR_ALLOWED_FORMATS=jpg,jpeg,png

# Social Platform URLs
TWITTER_SHARE_URL=https://twitter.com/intent/tweet
FACEBOOK_SHARE_URL=https://www.facebook.com/sharer/sharer.php
LINKEDIN_SHARE_URL=https://www.linkedin.com/sharing/share-offsite/

# === MONITORING AND LOGGING ===
LOG_LEVEL=INFO
STRUCTURED_LOGGING=true
LOG_FILE=logs/backend_hml.log

# Analytics
ENABLE_ANALYTICS_TRACKING=false
ANALYTICS_ENDPOINT=/api/analytics/track

# === TASK QUEUE CONFIGURATION ===
CELERY_BROKER_URL=sqlite:///data/celery/broker_hml.db
CELERY_RESULT_BACKEND=sqlite:///data/celery/results_hml.db
CELERY_TASK_ALWAYS_EAGER=false

# === FEATURE FLAGS ===
FEATURE_EMAIL_TEMPLATES=false
FEATURE_BATCH_NOTIFICATIONS=false
FEATURE_ADVANCED_ANALYTICS=false
FEATURE_SOCIAL_PROFILES=true
FEATURE_ACHIEVEMENT_SHARING=true

# === EXTERNAL API CONFIGURATION ===
GOOGLE_API_KEY=dummy_google_api_key_hml
RECAPTCHA_SECRET_KEY=dummy_recaptcha_secret_hml

# === PRODUCTION SAFETY SETTINGS ===
SESSION_COOKIE_SECURE=true
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=Strict
MAX_CONTENT_LENGTH=16777216
PERMANENT_SESSION_LIFETIME=1800

# === SERVER CONFIGURATION ===
FLASK_RUN_HOST=0.0.0.0
FLASK_RUN_PORT=5000
FLASK_RUN_RELOAD=false

# === GOOGLE CLOUD CONFIGURATION ===
# Para autenticação no Cloud Run
GOOGLE_APPLICATION_CREDENTIALS=/app/config/service-account-key.json

# === HOMOLOGAÇÃO SPECIFIC ===
ENVIRONMENT=homologacao
HML_TESTING_MODE=false
HML_MOCK_EXTERNAL_APIS=false

# ============================================================================
# NOTAS DE HOMOLOGAÇÃO:
#
# 1. Esta configuração é para ambiente de homologação
# 2. Valores sensíveis devem ser configurados via GitHub Secrets
# 3. APIs externas conectadas ao sistemas reais (OpenRouter, GCS, Supabase)
# 4. Cache configurado para Google Cloud Storage + SQLite
# 5. Email configurado para ambiente real
# 6. Database usando SQLite com backup real para GCS
# ============================================================================