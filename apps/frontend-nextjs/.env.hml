# Configuração para Ambiente de Homologação (HML)
# ===================================================

# Identificação do Ambiente
NEXT_PUBLIC_ENVIRONMENT=homologacao
NEXT_PUBLIC_SITE_NAME=hml-roteiros-de-dispensacao
NEXT_PUBLIC_VERSION=hml-1.0.0

# API Configuration
NEXT_PUBLIC_API_URL=https://hml-roteiro-dispensacao-api-4f2gjf6cua-uc.a.run.app
NEXT_PUBLIC_API_VERSION=v1
NEXT_PUBLIC_API_TIMEOUT=30000

# Firebase Configuration (HML)
NEXT_PUBLIC_FIREBASE_PROJECT_ID=roteiros-de-dispensacao
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=roteiros-de-dispensacao.firebaseapp.com
NEXT_PUBLIC_FIREBASE_DATABASE_URL=https://roteiros-de-dispensacao.firebaseio.com
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=roteiros-de-dispensacao.appspot.com

# Hosting Configuration
NEXT_PUBLIC_APP_URL=https://hml-roteiros-de-dispensacao.web.app
NEXT_PUBLIC_DOMAIN=hml-roteiros-de-dispensacao.web.app

# Feature Flags para HML
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_DEBUG=true
NEXT_PUBLIC_ENABLE_EXPERIMENTAL_FEATURES=true
NEXT_PUBLIC_ENABLE_PERFORMANCE_MONITORING=true
NEXT_PUBLIC_ENABLE_ERROR_REPORTING=true

# Debug Configuration
NEXT_PUBLIC_DEBUG_MODE=true
NEXT_PUBLIC_VERBOSE_LOGGING=true
NEXT_PUBLIC_SHOW_DEBUG_INFO=true

# Testing Configuration
NEXT_PUBLIC_ENABLE_TEST_IDS=true
NEXT_PUBLIC_ENABLE_CYPRESS_SUPPORT=true
NEXT_PUBLIC_MOCK_API_DELAYS=false

# Performance Configuration
NEXT_PUBLIC_ENABLE_SW=true
NEXT_PUBLIC_ENABLE_PREFETCH=true
NEXT_PUBLIC_IMAGE_OPTIMIZATION=true

# Security Configuration
NEXT_PUBLIC_SECURITY_LEVEL=standard
NEXT_PUBLIC_CSP_ENABLED=true
NEXT_PUBLIC_ENABLE_SECURITY_HEADERS=true

# Monitoring Configuration
NEXT_PUBLIC_MONITORING_ENABLED=true
NEXT_PUBLIC_UPTIME_MONITORING=true
NEXT_PUBLIC_PERFORMANCE_TRACKING=true

# Content Configuration
NEXT_PUBLIC_MEDICAL_CONTENT_VERSION=2024.1
NEXT_PUBLIC_PCDT_VERSION=2022
NEXT_PUBLIC_ENABLE_MEDICAL_DISCLAIMERS=true

# UI Configuration
NEXT_PUBLIC_THEME=medical
NEXT_PUBLIC_DEFAULT_LANGUAGE=pt-BR
NEXT_PUBLIC_ENABLE_DARK_MODE=true
NEXT_PUBLIC_ACCESSIBILITY_LEVEL=AA

# Integration Configuration
NEXT_PUBLIC_ENABLE_CHAT=true
NEXT_PUBLIC_ENABLE_PERSONAS=true
NEXT_PUBLIC_ENABLE_FEEDBACK=true
NEXT_PUBLIC_ENABLE_GAMIFICATION=true

# QA Configuration
NEXT_PUBLIC_QA_ENVIRONMENT=true
NEXT_PUBLIC_ENABLE_QUALITY_METRICS=true
NEXT_PUBLIC_ENABLE_A11Y_TESTING=true

# Build Configuration
NEXT_PUBLIC_BUILD_TARGET=hml
NEXT_PUBLIC_OPTIMIZATION_LEVEL=development
NEXT_PUBLIC_SOURCE_MAPS=true