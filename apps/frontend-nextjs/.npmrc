# Configurações de segurança NPM
audit-level=moderate
fund=false

# Política de versionamento rigorosa
package-lock=true
save-exact=true

# Verificação de integridade
integrity=true

# Bloqueio de pacotes suspeitos (template - atualizar conforme necessário)
# //debug:4.3.5=false # BLOCKED - Known malicious version
# //chalk:5.3.1=false # BLOCKED - Known malicious version

# Registry oficial apenas
registry=https://registry.npmjs.org/

# Timeout de segurança
timeout=30000

# Log de auditoria
audit=true