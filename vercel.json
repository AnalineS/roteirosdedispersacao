{
  "version": 2,
  "name": "roteiro-dispensacao",
  // "builds": [
  //   {
  //     "src": "api/main.py",
  //     "use": "@vercel/python"
  //   }
  // ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/main.py"
    },
    {
      "src": "/(.*)",
      "dest": "/public/$1"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  // Configuração comentada para resolver conflito builds/functions
  "functions": {
    "api/main.py": {
      "runtime": "python3.9"
      // "maxDuration": 30,
      // "memory": 512
    }
  },
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "s-maxage=60, stale-while-revalidate"
        }
      ]
    }
  ],
  "redirects": [
    {
      "source": "/health",
      "destination": "/api/health"
    }
  ],
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "/api/main.py"
    }
  ]
}