{
  "version": 2,
  "name": "roteiro-dispensacao",
  "framework": null,
  "builds": [
    {
      "src": "api/main.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "50mb",
        "includeFiles": "data/**"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/main.py"
    },
    {
      "src": "/(.*)",
      "dest": "/public/$1"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "functions": {
    "api/main.py": {
      "maxDuration": 30,
      "memory": 512,
      "runtime": "python3.11"
    }
  },
  "env": {
    "PYTHON_VERSION": "3.11",
    "VERCEL_ENV": "@vercel-env",
    "MONITORING_ENABLED": "true",
    "CACHE_ENABLED": "true",
    "HEALTH_CHECK_ENABLED": "true",
    "METRICS_COLLECTION_ENABLED": "true",
    "ERROR_REPORTING_ENABLED": "true"
  },
  "regions": ["iad1"],
  "outputDirectory": "public",
  "installCommand": "pip install -r requirements.txt",
  "buildCommand": "echo 'Build completed'",
  "devCommand": "python api/main.py",
  "ignoreCommand": "git diff --quiet HEAD^ HEAD .",
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "s-maxage=60, stale-while-revalidate"
        }
      ]
    }
  ],
  "redirects": [
    {
      "source": "/health",
      "destination": "/api/health"
    }
  ],
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "/api/main.py"
    }
  ]
}