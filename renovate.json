{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    ":dependencyDashboard",
    ":semanticCommitTypeAll(chore)",
    "group:allNonMajor"
  ],
  "labels": ["dependencies", "security"],
  "assignees": ["AnalineS"],
  "reviewers": ["AnalineS"],
  "timezone": "America/Sao_Paulo",
  "schedule": ["after 9am and before 6pm every weekday"],
  "prConcurrentLimit": 3,
  "packageRules": [
    {
      "description": "Security updates - auto merge patches",
      "matchUpdateTypes": ["patch"],
      "matchDepTypes": ["dependencies"],
      "automerge": true,
      "automergeType": "pr",
      "matchPackagePatterns": [
        "cryptography",
        "flask-cors",
        "requests",
        "setuptools",
        "sentence-transformers"
      ]
    },
    {
      "description": "PyTorch - requires manual review",
      "matchPackageNames": ["torch", "pytorch"],
      "automerge": false,
      "assignees": ["AnalineS"],
      "labels": ["security", "critical", "needs-testing"],
      "prPriority": 10
    },
    {
      "description": "Frontend security updates",
      "matchManagers": ["npm"],
      "matchUpdateTypes": ["patch", "minor"],
      "matchDepTypes": ["dependencies"],
      "automerge": true,
      "automergeType": "pr"
    },
    {
      "description": "Major updates - manual review",
      "matchUpdateTypes": ["major"],
      "automerge": false,
      "labels": ["major-update", "needs-review"]
    }
  ],
  "vulnerabilityAlerts": {
    "labels": ["security", "vulnerability"],
    "assignees": ["AnalineS"],
    "reviewers": ["AnalineS"],
    "enabled": true
  },
  "transitiveRemediation": true,
  "prBodyColumns": ["Package", "Type", "Update", "Change", "Pending"],
  "prBodyDefinitions": {
    "Pending": "Awaiting security review"
  },
  "postUpdateOptions": [
    "npmDedupe",
    "yarnDedupeHighest"
  ],
  "python": {
    "ignorePythonConstraints": false
  },
  "pip_requirements": {
    "fileMatch": ["requirements\\.txt$"]
  },
  "commitMessageExtra": "to {{newVersion}}",
  "commitMessagePrefix": "chore(deps):",
  "commitMessageAction": "update",
  "commitMessageTopic": "dependency {{depName}}",
  "prTitle": "chore(deps): update {{depName}} to {{newVersion}}",
  "prBodyTemplate": "This PR updates {{depName}} from {{currentVersion}} to {{newVersion}}.\n\n{{#if isSecurity}}ðŸ”’ **Security Update**{{/if}}\n\n{{#if releaseNotes}}### Release Notes\n\n{{releaseNotes}}{{/if}}\n\n---\n*Automated PR created by Renovate Bot*"
}