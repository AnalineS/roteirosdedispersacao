rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Usuários podem ler/escrever apenas seus próprios dados
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // Permitir criação de perfil durante cadastro
      allow create: if request.auth != null && request.auth.uid == userId;
    }
    
    // Perfis de usuário com controle granular
    match /user_profiles/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null && request.auth.uid == userId;
    }
    
    // Conversas do usuário
    match /conversations/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // Permitir subcoleções de mensagens
      match /messages/{messageId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }
    
    // Sessões de usuário (para analytics)
    match /sessions/{sessionId} {
      allow read, write: if request.auth != null && 
        resource.data.userId == request.auth.uid;
      allow create: if request.auth != null;
    }
    
    // Feedback do usuário
    match /feedback/{feedbackId} {
      allow read, write: if request.auth != null && 
        resource.data.userId == request.auth.uid;
      allow create: if request.auth != null;
    }
    
    // Dados públicos (conteúdo educacional, etc.)
    match /public/{document=**} {
      allow read: if true; // Leitura pública
      allow write: if request.auth != null; // Escrita apenas autenticados
    }
    
    // Analytics agregados (apenas leitura para administradores)
    match /analytics/{document=**} {
      allow read: if request.auth != null;
      allow write: if false; // Será gerenciado por Cloud Functions
    }
    
    // Configurações da aplicação
    match /app_config/{configId} {
      allow read: if true; // Configurações públicas
      allow write: if false; // Apenas via admin
    }
    
    // ==============================================
    // REGRAS ESPECÍFICAS PARA AMBIENTE HML
    // ==============================================
    
    // Dados HML - Permissivo para testes
    match /hml_{document=**} {
      allow read, write: if true; // Permissivo para ambiente de teste
    }
    
    // Usuários HML
    match /hml_users/{userId} {
      allow read, write: if true; // Permissivo para testes
      allow create, update, delete: if true;
    }
    
    // Conversas HML
    match /hml_conversations/{conversationId} {
      allow read, write: if true; // Permissivo para testes
      allow create, update, delete: if true;
      
      // Mensagens dentro das conversas HML
      match /messages/{messageId} {
        allow read, write: if true;
      }
    }
    
    // Feedback HML
    match /hml_feedback/{feedbackId} {
      allow read, write: if true; // Permissivo para testes
      allow create, update, delete: if true;
    }
    
    // Analytics HML
    match /hml_analytics/{analyticsId} {
      allow read, write: if true; // Permissivo para testes
      allow create, update, delete: if true;
    }
    
    // Perfis de usuário HML
    match /hml_user_profiles/{userId} {
      allow read, write: if true; // Permissivo para testes
      allow create, update, delete: if true;
    }
    
    // Sessões HML
    match /hml_sessions/{sessionId} {
      allow read, write: if true; // Permissivo para testes
      allow create, update, delete: if true;
    }
    
    // Cenários de teste HML
    match /hml_test_scenarios/{scenarioId} {
      allow read, write: if true; // Permissivo para testes
      allow create, update, delete: if true;
    }
    
    // Configurações HML
    match /hml_config/{configId} {
      allow read, write: if true; // Permissivo para testes
      allow create, update, delete: if true;
    }
    
    // Cache HML
    match /hml_cache/{cacheId} {
      allow read, write: if true; // Permissivo para testes
      allow create, update, delete: if true;
    }
    
    // Métricas HML
    match /hml_metrics/{metricId} {
      allow read, write: if true; // Permissivo para testes
      allow create, update, delete: if true;
    }
  }
}