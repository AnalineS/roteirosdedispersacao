# Backend Environment Variables

# API Keys
OPENROUTER_API_KEY=your_openrouter_api_key_here
HUGGINGFACE_API_KEY=your_huggingface_api_key_here

# Environment
FLASK_ENV=production
PORT=10000

# Paths
DATA_PATH=/app/data/structured

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=standard

# CORS (for production)
ALLOWED_ORIGINS=https://roteiros-de-dispensacao.web.app,https://roteiros-de-dispensacao.firebaseapp.com

# Cloud Run specific
CLOUD_RUN_SERVICE_URL=https://roteiro-dispensacao-api-1016586236354.us-central1.run.app

# Cache
REDIS_URL=redis://localhost:6379
CACHE_TTL=3600

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_DEFAULT=60/hour