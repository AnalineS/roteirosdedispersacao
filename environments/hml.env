# Configurações para Ambiente de Homologação (HML)
# ===================================================

# Identificação do Ambiente
ENVIRONMENT=homologacao
FLASK_ENV=production
DEBUG=false

# Cloud Run Configuration
PORT=8080
HOST=0.0.0.0

# Database Configuration (prefixo hml_)
FIRESTORE_COLLECTION_PREFIX=hml_

# API Configuration
API_VERSION=v1
API_TITLE=Roteiro Dispensação API - HML
API_DESCRIPTION=Sistema educacional para dispensação farmacêutica - Ambiente de Homologação

# CORS Configuration (HML domains)
CORS_ORIGINS=https://hml-roteiros-de-dispensacao.web.app,https://hml-roteiros-de-dispensacao.firebaseapp.com

# Cache Configuration (reduzido para HML)
CACHE_TTL=300
CACHE_MAX_SIZE=100

# Rate Limiting (relaxado para testes)
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=120

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
STRUCTURED_LOGGING=true

# Health Check Configuration
HEALTH_CHECK_TIMEOUT=30
HEALTH_CHECK_ENDPOINT=/health

# Testing Configuration
ENABLE_TEST_ENDPOINTS=true
RESET_DATA_ON_DEPLOY=true
SYNTHETIC_DATA_ENABLED=true

# Monitoring Configuration
MONITORING_ENABLED=true
METRICS_ENABLED=true
ALERT_ENVIRONMENT=hml

# Security Configuration
SECURITY_LEVEL=standard
RATE_LIMIT_STRICT=false
CORS_ALLOW_CREDENTIALS=false

# Performance Configuration (otimizado para testes)
WORKERS=2
THREADS=4
TIMEOUT=120
KEEP_ALIVE=2
MAX_REQUESTS=1000

# Feature Flags para HML
ENABLE_EXPERIMENTAL_FEATURES=true
ENABLE_DEBUG_ENDPOINTS=true
ENABLE_PERFORMANCE_PROFILING=true